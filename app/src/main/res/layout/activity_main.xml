<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/edu_toy"
        android:id="@+id/btn_myicon"
        />

    <Button
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        android:background="@drawable/edu_tut"
        android:layout_below="@+id/btn_myicon"
        android:id="@+id/btn_myicon1"
        />

    <Button
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/edu_sup"
        android:layout_below="@+id/btn_myicon1"
        android:id="@+id/btn_myicon2"
        android:layout_marginLeft="250dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_myicon2"
        android:text="Click To Destroy"
        android:textSize="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:id="@+id/txt_destroy"
        />


</RelativeLayout>